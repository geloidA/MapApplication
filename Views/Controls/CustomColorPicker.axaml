<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:map_app.Views.Controls">
    <Design.PreviewWith>
        <controls:CustomColorPicker />
    </Design.PreviewWith>

  <Style Selector="controls|CustomColorPicker">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
        <Button Background="{Binding SelectedBackground, RelativeSource={RelativeSource TemplatedParent}}" BorderThickness="1" BorderBrush="black">
            <Button.Flyout>
                <MenuFlyout Placement="Top">
                    <MenuItem Background="yellow" Command="{Binding SelectColor, RelativeSource={RelativeSource TemplatedParent}}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Background}"/>
                    <MenuItem Background="orange" Command="{Binding SelectColor, RelativeSource={RelativeSource TemplatedParent}}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Background}"/>
                    <MenuItem Background="blue" Command="{TemplateBinding SelectColor}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Background}" />
                </MenuFlyout>
            </Button.Flyout>
        </Button>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
