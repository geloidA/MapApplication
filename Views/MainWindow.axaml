<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:controls="clr-namespace:map_app.Views.Controls;assembly=map_app"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonia="clr-namespace:Mapsui.UI.Avalonia;assembly=Mapsui.UI.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        FontFamily="Ubuntu"
        WindowStartupLocation="CenterScreen"
        x:Class="map_app.Views.MainWindow"
        Title="Подготовка полётного задания">
    <Grid>
        <DockPanel>
            <controls:MenuPanel DockPanel.Dock="Top"/>

            <Grid DockPanel.Dock="Bottom">
                <avalonia:MapControl x:Name="MapControl" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />            
                <controls:AuxiliaryPanel HorizontalAlignment="Right" Width="60" />
                <controls:NavigationPanel />
            </Grid>
        </DockPanel>        
    </Grid>    
</Window>
